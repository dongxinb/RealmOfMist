<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main"
    tools:context="edu.zju.realmofmist.app.ProfileActivityFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dong Xinbao"
            android:id="@+id/userNameText"
            android:textColor="@color/status_color"
            android:textStyle="bold"
            android:scaleType="centerCrop"
            android:layout_marginTop="165dp"
            android:textSize="27dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <edu.zju.realmofmist.view.RoundImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/userIconImage"
            android:layout_marginBottom="59dp"
            android:src="@drawable/icon"
            android:layout_alignBottom="@+id/userNameText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18868100323"
            android:id="@+id/userPhoneText"
            android:textColor="@color/status_color"
            android:layout_below="@+id/userNameText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:id="@+id/textView"
            android:textColor="@color/status_color"
            android:layout_below="@+id/userPhoneText"
            android:layout_toStartOf="@+id/userIconImage"
            android:layout_marginTop="75dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/userAreaText"
            android:textColor="@color/status_color"
            android:layout_alignTop="@+id/textView"
            android:textSize="20dp"
            android:layout_marginRight="100dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
